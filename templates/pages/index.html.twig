{% extends 'base.html.twig' %}

{% block title %} Tu es la plus belle {% endblock %}

        {% block body %}
            {% include 'pages/_carousel.html.twig' %}
            <h1 class="m-5 text-center">Tu es la plus belle bijoux</h1>
            <div class="container">
                <h2 class="m-5 text-center">Les plus vendus</h2>
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    {% for bestseller in bestsellers %}

                        <div class="col">
                            <div class="card h-100">
                                <img src="http://via.placeholder.com/60" class="card-img-top" alt="">
                                <div class="card-body text-center">
                                    <h5 class="card-title">{{ bestseller.description }}</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">{{ bestseller.price ~ ' ' ~ '00' ~ ' €'}}</h6>
                                </div>
                            </div>
                        </div>

                    {% endfor %}
                </div>
                <h2 class="m-5 text-center">Les nouveautés</h2>
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    {% for newproduct in newProducts %}
                    <div class="col">
                        <div class="card h-100">
                            <img src="http://via.placeholder.com/60" class="card-img-top" alt="">
                            <div class="card-body text-center">
                                <h5 class="card-title">{{ newproduct.description }}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">{{ newproduct.category.name }}</h6>
                                <h6 class="card-subtitle mb-2 text-muted">{{ newproduct.formattedPrice }}</h6>
                                <a class="btn btn-info" href="{{ path('card_add', {'id': newproduct.id}) }}">Ajouter au panier</a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>

        {% endblock %}